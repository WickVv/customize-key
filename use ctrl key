<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customizable Key Combination</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
            background-color: #f4f4f4;
        }
        button {
            padding: 12px 24px;
            font-size: 18px;
            cursor: pointer;
            border: none;
            background-color: #007BFF;
            color: white;
            border-radius: 5px;
            transition: background 0.3s;
        }
        button:hover {
            background-color: #0056b3;
        }
        .settings-icon {
            font-size: 22px;
            cursor: pointer;
            display: inline-block;
            margin-left: 10px;
            padding: 5px;
            transition: transform 0.2s;
        }
        .settings-icon:hover {
            transform: scale(1.2);
        }
        .highlight {
            background-color: yellow;
            padding: 5px;
            border-radius: 3px;
        }
        .popup {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            text-align: center;
        }
        .popup.active {
            display: block;
            animation: fadeIn 0.3s ease-in-out;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translate(-50%, -60%); }
            to { opacity: 1; transform: translate(-50%, -50%); }
        }
    </style>
</head>
<body>
    <h2>Customizable Compile Button</h2>
    <p>Press the button below or set your custom key combination to trigger the action.</p>
    <button id="compileButton">Compile</button>
    <p>
        Current Compile Key: <strong id="currentKey">None</strong>
        <span class="settings-icon" id="settings">⚙️</span>
    </p>
    
    <div id="popup" class="popup">
        <p>Press Ctrl and any key together to set it as your compile key.</p>
        <button onclick="closePopup()">OK</button>
    </div>
    
    <script>
        let customKey = null;
        let settingMode = false;
        
        document.getElementById("compileButton").addEventListener("click", compile);
        document.getElementById("settings").addEventListener("click", function() {
            document.getElementById("currentKey").classList.add("highlight");
            document.getElementById("popup").classList.add("active");
            settingMode = true;
        });

        document.addEventListener("keydown", function(event) {
            if (settingMode && event.ctrlKey && event.key !== "Control") {
                customKey = event.key.toUpperCase();
                document.getElementById("currentKey").textContent = `CTRL + ${customKey}`;
                document.getElementById("currentKey").classList.remove("highlight");
                document.getElementById("popup").classList.remove("active");
                settingMode = false;
                event.preventDefault();
            }
        });

        document.addEventListener("keydown", function(event) {
            if (customKey && event.ctrlKey && event.key.toUpperCase() === customKey) {
                compile();
                event.preventDefault();
            }
        });

        function compile() {
            const popup = document.getElementById("popup");
            popup.innerHTML = '<p>Compiling...</p>';
            popup.classList.add("active");
            setTimeout(() => {
                popup.classList.remove("active");
            }, 2000);
        }

        function closePopup() {
            document.getElementById("popup").classList.remove("active");
        }
    </script>
</body>
</html>
